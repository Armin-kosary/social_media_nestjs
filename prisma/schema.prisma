generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "mysql"
}


model User {
  id Int @default(autoincrement()) @id
  username String @unique
  profile String?
  email String
  name String?
  biography String?
  createdAt DateTime @default(now())
  posts Post[]
}

model Post {
  id Int @default(autoincrement()) @id
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  media String
  caption String?
  createdAt DateTime @default(now())
}